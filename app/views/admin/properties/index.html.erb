<h1>Listing properties</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @properties.each do |property| %>
  <tr>
    <td><%= property.name %></td>
    <td><%= property.value %></td>
    <td><%= link_to 'Show', [:admin, property] %></td>
    <td><%= link_to 'Edit', edit_admin_property_path(property) %></td>
    <td><%= link_to 'Destroy', [:admin, property], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

